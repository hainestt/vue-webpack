{
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules"
    ],
    "compilerOptions": {
		"sourceMap": true,
        "pretty": true,
        "target": "es5", // 编译输出目标ES版本
        "strict": true, // 以严格模式解析
        "module": "esnext", // 采用的模块系统
        "moduleResolution": "node", //如何处理模块
        "allowJs": true, // 允许编译js文件
        "isolatedModules": false, // 讲每个文件作为单独的模块
        "experimentalDecorators": true, // 启用装饰器
        "importHelpers": true, // 从tslib 导入外部帮助库：比如__extends, __rest等,
		"emitDecoratorMetadata": true, // 启用设计类型元数据
		"jsx": "preserve", // 在.tsx文件里支持JSX
		"jsxFactory": "h", // 使用JSX工厂函数
		"allowSyntheticDefaultImports": false, // 允许从没有设置默认导出的模块中导入
		"strictFunctionTypes": false, // 禁用函数参数双向协变检查
		"noImplicitAny": true, // 在表达式和声明有隐含的any类型时报错
        "lib": [
            "dom",
            "es5",
            "es6",
            "es7",
            "es2015.promise"
        ]
    }
}
